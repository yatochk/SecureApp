<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="BaseActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="GalleryActivity" parent="BaseActivity" />

    <style name="AlbumActivity" parent="BaseActivity" />

    <style name="ImageActivity" parent="BaseActivity" />

    <style name="ContactActivity" parent="BaseActivity" />

    <style name="KeyboardButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:background">@color/cardBackground</item>
    </style>

    <style name="KeyboardActionButton" parent="KeyboardButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
